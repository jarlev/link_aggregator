<div class="container">
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-9">
			<div class="row">
            		<div class="col-sm-9">
            			<div id="posts_list">
						<h4><em><u><strong>Most recent posts:</strong></u></em></h4>
						<% if @posts.present? %>
							<%= render partial: 'posts/posts_list', locals: {post: @posts, topic: @topic} %>
						<% end %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
			<div class="container-fluid">
				<div class="input-group">
	      			<input type="text" class="form-control" placeholder="search">
	      			<span class="input-group-btn">
	        				<button class="btn btn-default" type="button">Go!</button>
	      			</span>
	    			</div>
				<h1><strong><u><%= @topic.name %></strong></u></h1>
				<h3 id="description"><small><em><%= @topic.description %></small></em></h3><br>
				<h4><small>
					<div class="btn-group-vertical" role="group">
						<%= link_to "Submit a new post", submit_topic_path, method: :post, class: "btn btn-primary" %>
						<% if current_user == @topic.creator %>
							<%= link_to "Delete this topic", @topic, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
						<% end %>
					</div><br><br>
					<ul>Important Links</ul><br>
					<ul>Member List</ul><br>
				</small></h4>
			</div>
		</div>
	</div>
</div>
