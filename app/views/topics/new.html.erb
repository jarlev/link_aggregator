<h2><u>Create a new topic</u></h2>

<%= form_for @topic, url: topics_path do |f| %>
	<%= f.label :name %>
	<%= f.text_area :name, class: "form-inline" %>
	<br>
	<%= f.label :description %>
	<%= f.text_area :description, class: "form-inline"  %>
	<br>
	<%= f.submit "Create topic", class: "btn btn-success" %>
<% end %>