<div class="panel panel-default">
	<div class="container-fluid">
		<div class="container-fluid">
			<div class="col-sm-12">
				<div class="row">
					<div class="panel panel-heading">
							<%= link_to increment_upvote_topic_path(@posts.topic, post: @posts.id), remote: true do %>
								<button type="button" class="btn btn-default btn-lg">
									<div class="upvote-submit-<%= @posts.id %>">
				  						<span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
				  					</div>
								</button><br>
							<% end %>
							<br>
								<ul class="list-unstyled">
									<li style="font-size: 20px; margin-left: 35px"><span><%= link_to "#{@posts.title}", post_path %></span></li>
									<li class="change_score_<%= @posts.id %>" style="margin-left: 17.5px"><%= render partial: '/topics/change_score', locals: {post: @posts} %></li>
								</ul>
							<%= link_to increment_downvote_topic_path(@posts.topic, post: @posts.id), remote: true do %>
								<button type="button" class="btn btn-default btn-lg">
									<div class="downvote-submit-<%= @posts.id %>">
				  						<span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
				  					</div>
								</button>
							<% end %>
						</div>
				</div>
			</div>
		</div>
		<div class="panel panel-body panel-info">
			<div class="container-fluid">
				<%= @posts.description %>
			</div>
		</div>
		<div class="pull-left">
			<ul class="menu">
				<li><%= link_to "#{@posts.comments.count} comments", post_path %></li>
			</ul>
		</div>
		<div class="pull-right">
			<ul class="menu">
				<li><%= link_to "reply to this post", submit_comment_post_path, method: :post %> | </li>
				<li></li>
				<li></li>
				<li>posted by <%= @posts.user.username %></li>	
				<li>to: <%= link_to @posts.topic.name, topic_path(@posts.topic) %></li>
			</ul>
		</div>
	</div>
</div>
<h4><em><u><strong>Most recent comments:</strong></u></em></h4>

<% @comments.each do |comment| %>
	<div id="indent">
		<div class="panel panel-default">
			<div class="container-fluid">
				<div class="container-fluid">
					<br>
					<strong><%= comment.description %></strong>	
				</div>
				<div class="pull-left">
					<ul class="menu">
						<li></li>
					</ul>
				</div>
				<div class="pull-right">
					<ul class="menu">
						<li><%= link_to "reply to this comment", '#', method: :post %> | </li>
						<li></li>
						<li></li>
						<li>posted by <%= comment.user.username %></li>	
						<li>on <em><%= comment.created_at %></em></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
<% end %>