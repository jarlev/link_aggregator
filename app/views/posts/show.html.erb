<div class="container">
	<div class="row row-offcanvas row-offcanvas-right">
		<div class="col-xs-12 col-sm-9">
			<div class="row">
            		<div class="col-sm-9">
					<div id="comments_list">
						<%= render '/comments/comments_list' %>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar">
			<div class="container-fluid">
				<div class="input-group">
	      			<input type="text" class="form-control" placeholder="search">
	      			<span class="input-group-btn">
	        				<button class="btn btn-default" type="button">Go!</button>
	      			</span>
	    			</div>
				<h1><strong><u><%= @topic.name %></strong></u></h1>
				<h3 id="description"><small><em><%= @topic.description %></small></em></h3><br>
				<h4><small>
					<div class="btn-group-vertical" role="group">
						<%= link_to "Submit a new post", submit_topic_path(@posts.topic), method: :post, class: "btn btn-primary" %>
					</div><br>
					Important Links
				</small></h4>
			</div>
		</div>
	</div>
</div>
